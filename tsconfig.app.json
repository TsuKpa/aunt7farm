{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2020",
            "dom"
        ],
        "outDir": "../out-tsc/app",
        "target": "es6",
        "module": "es2020",
        "baseUrl": "",
        "types": [],
		"paths": {
			"@app/*": [
				"src/app/*"
			],
			"@layout/*": [
				"src/app/common/layout/*"
			],
			"@utils/*": [
				"src/app/common/utils/*"
			],
			"@pages": [
				"src/app/pages/*"
			]
		}
    },
    "exclude": [
        "test.ts",
        "**/*.spec.ts"
    ]
}
